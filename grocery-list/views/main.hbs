<div class="container">
  <h1>What do you need?</h1>
  <form class="add-item-form" method="POST" >
    <input type="text"
           placeholder="I desperately need..."
           name="item"/>
    <button>And so it shall be!</button>
  </form>
  <h1 class="list-lead-in">Your list thus far:</h1>
  <ol class="grocery-list">
    {{#each groceries}}
      <li>{{this}}</li>
    {{/each}}
  </ol>
</div>
